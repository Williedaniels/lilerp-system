cat > .gitignore << 'EOF'
# Dependencies
node_modules/
package-lock.json

# Environment variables
.env
.env.local
.env.*.local

# Database files
*.db
*.db-shm
*.db-wal
database/*.db
database/*.db-shm
database/*.db-wal

# Logs
*.log
npm-debug.log*
logs/

# OS files
.DS_Store
Thumbs.db

# IDE
.vscode/
.idea/
*.swp
*.swo

# Build outputs
dist/
build/
.vite/

# Ngrok
ngrok
EOF